    <!-- Material design guide specs for image only grid lists: spacing 1dp or 4dp
         https://material.io/guidelines/components/grid-lists.html#grid-lists-specs -->
    <dimen name="poster_grid_spacing">4dp</dimen>
    <dimen name="poster_grid_text_size_error_msg">24sp</dimen>
