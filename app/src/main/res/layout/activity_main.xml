<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="biz.smk.popularmovies.MainActivity">

    <!-- Poster grid -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_poster_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Poster grid loading indicator -->
    <ProgressBar
        android:id="@+id/pb_main_poster_grid_loading_indicator"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <!-- Poster grid error message -->
    <TextView
        android:id="@+id/tv_main_poster_grid_error_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="@dimen/poster_grid_text_size_text_msg"
        android:gravity="center"
        android:text="@string/activity_main_postergrid_error_msg" />

    <!-- Favorites empty message -->
    <TextView
        android:id="@+id/tv_main_favorites_empty_msg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:textSize="@dimen/poster_grid_text_size_text_msg"
        android:gravity="center"
        android:text="@string/activity_main_favorites_empty_msg" />

</RelativeLayout>
